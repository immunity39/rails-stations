<h1>更新</h1>

<%= form_with(model: @movie, url: admin_movie_path(@movie), method: :patch, local: true) do |f| %>

  <% render 'shared/error_messages', object: @movie %>

  <%= f.label :name, '映画タイトル' %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :year, '公開年' %>
  <%= f.number_field :year %>
  <br>

  <%= f.label :is_showing, '上映中か' %>
  <%= f.check_box :is_showing %>
  <br>

  <%= f.label :description, '概要' %>
  <%= f.text_area :description %>
  <br>

  <%= f.label :image_url, '画像URL' %>
  <%= f.text_field :image_url %>
  <br>

  <%= f.submit %>
<% end %>
<%= button_to '削除', admin_movie_path(@movie), method: :delete, data: { confirm: '削除しますか？'} %>
<br>
