<h1>スケジュール更新</h1>

<%= form_with(model: @schedule, url: admin_schedule_path(@schedule), method: :patch) do |f| %>
  <%= f.label :start_time, '上映開始時間' %>
  <%= f.time_field :start_time %>
  <br>

  <%= f.label :end_time, '上映終了時間' %>
  <%= f.time_field :end_time %>
  <br>

  <%= f.submit %>
  <br>
<% end %>
<%= button_to '削除', admin_schedule_path(@schedule), method: :delete, data: {confirm: '本当に削除しますか？'} %>
<br>
